---
import RootLayout from "./RootLayout.astro";
import Footer from "../components/footer.astro";
import WarpBackground from "../components/warp-background";
import facePic from "../assets/face-pic.jpg";

const { title, description } = Astro.props;

const pathname = Astro.url.pathname;
---

<RootLayout title={title} description={description}>
	<div class="flex relative gap-4 w-full max-w-screen-xl">
		<nav class="relative w-4 md:min-w-2xs xl:min-w-sm sm:min-h-screen sm:ml-4 sm:pb-4">
			<div class="w-full h-full max-sm:w-4 md:max-w-2xs xl:max-w-sm fixed -z-10 sm:bottom-4 sm:rounded-b-full overflow-hidden">
				<img
                    src={facePic.src}
                    alt="Face photo"
                    class="absolute z-10 left-1/2 top-8 -translate-x-1/2 rounded-full border-4 border-white shadow-lg w-50 h-50 object-cover"
                />
				<WarpBackground
					color1="#bfd834"
					color2="#019875"
					color3="#72cc50"
					speed={0.15}
					swirl={1.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>
		</nav>

		<main class="relative"  >
			<slot />
			<Footer />
		</main>


	</div>
</RootLayout>
